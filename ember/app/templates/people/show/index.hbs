<p>
	<label>Name:</label>
	{{view Ember.TextArea valueBinding="name"}}		
</p>
<p>
	<label>Email:</label>
	{{view Ember.TextArea valueBinding="email"}}
</p>
<p>
	<label>Zip:</label>
	{{view Ember.TextArea valueBinding="zipCode"}}
</p>
<p>
	<button {{action 'save' model}}>
	{{#if isLoaded}}
		{{#if isSaving}}
			Saving...
		{{else}}
			{{#if isDirty}}
				Save me!
			{{else}}
				Make some changes!
			{{/if}}
		{{/if}}
	{{else}}
		Loading...
	{{/if}}
	</button>
</p>